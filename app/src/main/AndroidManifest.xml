<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CRUDOperation.NoActionBar"
        tools:targetApi="31">

        <activity
            android:name="com.androidwithshiv.crudyalgomas.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.androidwithshiv.crudyalgomas.SecondActivity"
            android:exported="false" />

        <activity
            android:name="com.androidwithshiv.crudyalgomas.MainActivity"
            android:exported="false">
        </activity>

    </application>
</manifest>
