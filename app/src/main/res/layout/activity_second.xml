<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <EditText
        android:id="@+id/numeroEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Adivina el número"
        android:inputType="number"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/adivinarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numeroEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Adivinar" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adivinarButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/felicitacionesImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="21dp"
        android:src="@drawable/armorking"
        android:visibility="invisible" />

    <Button
        android:id="@+id/virginioGomezButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/felicitacionesImageView"
        android:layout_alignEnd="@+id/felicitacionesImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="76dp"
        android:text="Virginio Gómez" />

    <Button
        android:id="@+id/googleMapsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/virginioGomezButton"
        android:layout_alignEnd="@+id/felicitacionesImageView"
        android:layout_alignBottom="@+id/felicitacionesImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="152dp"
        android:text="Google Maps" />


</RelativeLayout>
